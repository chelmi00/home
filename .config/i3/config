client.unfocused	$inactive-bg-color	$inactive-bg-color	$inactive-text-color	$index-color
client.focused_inactive	$inactive-bg-color	$inactive-bg-color	$inactive-text-color	$index-color
client.urgent		$urgent-bg-color	$urgent-bg-color	$urgent-text-color	$index-color

